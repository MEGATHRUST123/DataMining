nn.rep <- function(rep, ...) {
  v.min <- Inf 
  for (r in 1:rep) { 
    nn.temp <- nnet(...) 
    v.temp <- nn.temp$value 
    if (v.temp < v.min) { 
      v.min <- v.temp
      nn.min <- nn.temp
    }
  }
  return(nn.min)
}
